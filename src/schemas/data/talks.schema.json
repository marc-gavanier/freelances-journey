{
  "$ref": "#/definitions/Talks",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Talk": {
      "additionalProperties": false,
      "properties": {
        "date": {
          "format": "date-time",
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "duration": {
          "type": "number"
        },
        "language": {
          "type": "string"
        },
        "openFeedback": {
          "const": false,
          "type": "boolean"
        },
        "room": {
          "type": "string"
        },
        "slidesLink": {
          "type": "string"
        },
        "speakers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "title": {
          "type": "string"
        },
        "track": {
          "type": "string"
        },
        "videoLink": {
          "type": "string"
        }
      },
      "required": ["title", "speakers", "description", "duration", "room", "track", "language", "date"],
      "type": "object"
    },
    "Talks": {
      "items": {
        "$ref": "#/definitions/Talk"
      },
      "type": "array"
    }
  }
}
